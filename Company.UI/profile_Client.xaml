<Window x:Class="Company.UI.profile_Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Company.UI"
        mc:Ignorable="d"
        Title="Client" Height="434.416" Width="631.168">
    <Grid>
        <ListBox x:Name="list_myOrders" HorizontalAlignment="Left" Height="100" Margin="503,41,0,0" VerticalAlignment="Top" Width="110"/>
        <Label x:Name="label" Content="My Orders" HorizontalAlignment="Left" Margin="503,15,0,0" VerticalAlignment="Top" Height="26" Width="110"/>
        <Label x:Name="label1" Content="Catalogue" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
        <ListView x:Name="listView_myCatalogue" HorizontalAlignment="Left" Height="159" Margin="10,41,0,0" VerticalAlignment="Top" Width="249" SelectionChanged="listView_myCatalogue_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Items" DisplayMemberBinding="{Binding ItemName}"/>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="button_show_catalogue" Content="Show" HorizontalAlignment="Left" Margin="10,205,0,0" VerticalAlignment="Top" Width="75" Click="button_show_catalogue_Click"/>
    </Grid>
</Window>
